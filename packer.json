{
  "min_packer_version": "1.1.0",
  "variables": {},
  "builders": [
    {
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sdb",
          "virtual_name": "ephemeral0"
        },
        {
          "device_name": "/dev/sdc",
          "virtual_name": "ephemeral1"
        }
      ],
      "ami_description": "High Performance Image for CentOS 7, based on Chef's. Includes puppet, and latest security patches.  https://github.com/siebrand/packer-chef-highperf-centos7-ami",
      "ami_groups": [
        "all"
      ],
      "ami_name": "siebrand-highperf-centos7-{{isotime \"200601021504\"}}",
      "ami_regions": [
        "eu-west-1"
      ],
      "communicator": "ssh",
      "ebs_optimized": true,
      "ena_support": true,
      "sriov_support": true,
      "instance_type": "m4.large",
      "region": "eu-west-1",
      "source_ami": "ami-0f08a479491fd8645",
      "ssh_pty": true,
      "ssh_username": "centos",
      "tags": {},
      "type": "amazon-ebs"
    }
  ],
  "post-processors": [],
  "provisioners": [
    {
      "destination": "/tmp/install_prereqs.sh",
      "source": "scripts/install_prereqs.sh",
      "type": "file"
    },
    {
      "inline": [
        "sudo chmod 0755 /tmp/install_prereqs.sh",
        "sudo /tmp/install_prereqs.sh"
      ],
      "inline_shebang": "/bin/bash -e",
      "type": "shell"
    }
  ]
}
